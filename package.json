{
	"name": "yantrix",
	"version": "0.0.1",
	"description": "Event-Driven FSM Framework",
	"type": "module",
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"clean": "lerna clean -y",
		"build": "lerna run build",
		"build:affected": "lerna run build --since main",
		"test": "lerna run test --parallel",
		"test:affected": "lerna run test --since main --parallel",
		"postinstall": "is-ci || husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/octaharon/yantrix.git"
	},
	"keywords": [
		"fsm",
		"typescript",
		"state",
		"management",
		"eda",
		"uml",
		"mermaidjs"
	],
	"author": "Alexander Uskov <neolord.tmb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/octaharon/yantrix/issues"
	},
	"homepage": "https://github.com/octaharon/yantrix#readme",
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@typescript-eslint/eslint-plugin": "^5.59.7",
		"@typescript-eslint/parser": "^5.59.7",
		"@vitest/coverage-c8": "^0.31.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"is-ci": "^3.0.1",
		"lerna": "^6.6.2",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"typescript": "^5.0.4",
		"vitest": "^0.31.1"
	},
	"workspaces": [
		"packages/*"
	]
}
